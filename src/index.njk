<h1>{{ metadata.title }}</h1>

<h2>Последние добавленные</h2>

{% set recipes = collections.recipes | reverse | limit(10) %}

<ul class="list">
  {% for recipe in recipes %}
    <li>
      <a href="{{ recipe.url | url }}">{{ recipe.data.title }}</a>
    </li>
  {% endfor %}
</ul>

<a href="/recipes"><b>СМОТРЕТЬ ВСЕ</b></a>

<h2>По категориям</h2>

<ul class="list">
  {% for tag in collections.tags %}
    {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <li>
      <a href="{{ tagUrl | url }}">{{ tag }}</a>
    </li>
  {% endfor %}
</ul>

<h2>По авторам</h2>

<ul class="list">
  {% for author in collections.authors %}
    {% set authorUrl %}/authors/{{ author | slugify }}/{% endset %}
    <li>
      <a href="{{ authorUrl | url }}">{{ author }}</a>
    </li>
  {% endfor %}
</ul>

